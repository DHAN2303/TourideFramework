<script src="~/admin/js/custom/user/touridedatatable.js"></script>

<div class="rounded-10 p-3" >

<div class="d-flex flex-row-reverse mb-3">
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#createCouponBarCollapse" aria-expanded="false" aria-controls="collapseExample">
        Yeni kupon oluştur
    </button>
        <button class="btn btn-primary mx-1" type="button" data-toggle="collapse" data-target="#filterCouponBarCollapse" aria-expanded="false" aria-controls="collapseExample">
            Filtrele ve kuponları getir
        </button>
</div>

@* ////////////////////////////////////////////////////////////////////////////////////// *@
@* start create new coupon bar *@

<div class="collapse" id="createCouponBarCollapse">
    <div class="card card-body">
        <div class="row">
            @* start coupon start date *@
            <div class="col-6">
                <div class="d-flex flex-row input-group mb-3">
                    <div class="input-group-prepend w-25 bg-danger">
                        <span class="input-group-text w-100">Başlangıç</span>
                    </div>
                    <input type="date" class="form-control w-75">
                </div>
            </div>
            @* end coupon start date *@
        
            @* start coupon end date *@
            <div class="col-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Bitiş</span>
                    </div>
                    <select id="couponCreateEndDateSelection" class="form-control w-25">
                        <option class="form-control" value="1" selected>Süresiz</option>
                        <option class="form-control" value="2">1 Ay</option>
                        <option class="form-control" value="3">6 Ay</option>
                        <option class="form-control" value="4">12 Ay</option>
                        <option class="form-control" value="5">Özel Seçim Yap</option>
                    </select>
                    <input disabled id="couponCreateCustomEndDateInput" type="date" class="form-control w-50">
                </div>
            </div>
            @* end coupon end date *@
        
            @* start user subscribe kind *@
            <div class="col-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Üyelik Türü</span>
                    </div>
                    <select class="form-control w-75">
                        <option class="form-control" value="1" selected>Tümü</option>
                        <option class="form-control" value="1">Basic</option>
                        <option class="form-control" value="2">Premium</option>
                        <option class="form-control" value="3">Premium Plus</option>
                    </select>
                </div>
            </div>
            @* end user subscribe kind *@
                    
            @* start belonging to *@
            <div class="col-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Aitlik</span>
                    </div>
                    <select id="couponCreateBelongingIdentitySelection" class="form-control w-75">
                        <option class="form-control" value="1" selected>Tümü</option>
                        <option class="form-control" value="2">Grup</option>
                        <option class="form-control" value="3">Club</option>
                        <option class="form-control" value="4">Bireysel</option>
                    </select>
                </div>
            </div>
            @* end belonging to *@
                    
            @* start belonging identity *@
            <div class="col-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Aitlik Kimliği</span>
                    </div>
                    <input disabled id="couponCreateBelongingIdentityInput" class="form-control w-75" type="text" placeholder="coupon identity...">
                </div>
            </div>
            @* end belonging identity *@
        
            @* start coupon name *@
            <div class="col-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend w-25">
                        <span class="input-group-text w-100">Kupon Adı</span>
                    </div>
                    <input class="form-control w-75" type="text" placeholder="coupon identity...">
                </div>
            </div>
            @* end coupon name *@
        
            @* start create button *@
            <div class="col-1">
                <button class="btn btn-primary" type="button">Oluştur</button>
            </div>
            @* end create button *@
        </div>
    </div>
</div>
@* end create new coupon bar  *@
@* ////////////////////////////////////////////////////////////////////////////////////// *@

@* ////////////////////////////////////////////////////////////////////////////////////// *@
@* start filter bar *@

    <div class="collapse" id="filterCouponBarCollapse">
        <div class="card card-body">
                <div class="row">
                    @* start coupon start date *@
                    <div class="col-6">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend w-25">
                                <span class="input-group-text w-100">Başlangıç</span>
                            </div>
                            <select id="couponFilterStartDateSelection" class="form-control w-25">
                                <option class="form-control" value="1" selected>Süresiz</option>
                                <option class="form-control" value="2">1 Ay</option>
                                <option class="form-control" value="3">6 Ay</option>
                                <option class="form-control" value="4">12 Ay</option>
                                <option class="form-control" value="5">Özel Seçim Yap</option>
                            </select>
                            <input id="couponFilterStartDateInput" disabled type="date" class="form-control w-50">
                        </div>
                    </div>
                    @* end coupon start date *@
            
                    @* start coupon end date *@
                    <div class="col-6">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend w-25">
                                <span class="input-group-text w-100">Bitiş</span>
                            </div>
                            <select disabled id="couponFilterEndDateSelection" class="form-control w-25">
                                <option class="form-control" value="1" selected>Süresiz</option>
                                <option class="form-control" value="1">1 Ay</option>
                                <option class="form-control" value="2">6 Ay</option>
                                <option class="form-control" value="3">12 Ay</option>
                                <option class="form-control" value="3">Özel Seçim Yap</option>
                            </select>
                            <input disabled id="couponFilterEndDateInput" type="date" class="form-control w-50">
                        </div>
                    </div>
                    @* end coupon end date *@
            
                    @* start user subscribe kind *@
                    <div class="col-6">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend w-25">
                                <span class="input-group-text w-100">Üyelik Türü</span>
                            </div>
                            <select class="form-control w-75">
                                <option class="form-control" value="1" selected>Tümü</option>
                                <option class="form-control" value="1">Basic</option>
                                <option class="form-control" value="2">Premium</option>
                                <option class="form-control" value="3">Premium Plus</option>
                            </select>
                        </div>
                    </div>
                    @* end user subscribe kind *@
            
                    @* start coupon name *@
                    <div class="col-6">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend w-25">
                                <span class="input-group-text w-100">Kupon Adı</span>
                            </div>
                            <input class="form-control w-75" type="text" placeholder="coupon identity...">
                        </div>
                    </div>
                    @* end coupon name *@
            
                    @* start create button *@
                    <div class="col-2">
                        <button class="btn btn-primary" type="button">Filtrele ve Getir</button>
                    </div>
                    @* end create button *@
            </div>
        </div>
    </div>
@* end filter bar  *@
@* ////////////////////////////////////////////////////////////////////////////////////// *@


